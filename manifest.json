{
  "manifest_version": 2,
  "name": "Pop-out Player",
  "version": "0.2.0",
  "description": "Minimal pop-out player for YouTubeâ„¢",
  "content_scripts": [{
    "matches": [
      "*://www.youtube.com/embed*",
      "*://www.youtube-nocookie.com/embed*"
    ],
    "js": ["embed.js"],
    "all_frames": true
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "assets/pop-32.png",
    "48": "assets/pop-96.png",
    "128": "assets/pop-256.png"
  },
  "page_action": {
    "default_title": "Open this video in its own window."
  },
  "permissions": [
    "*://www.youtube.com/*",
    "*://www.netflix.com/watch*",
    "tabs",
    "webNavigation",
    "storage"
  ]
}
